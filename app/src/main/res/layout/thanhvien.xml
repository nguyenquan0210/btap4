<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_login"
    >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo">
    </ImageView>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="THÀNH VIÊN NHÓM"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Hồ Minh Thắng"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:textColor="?attr/colorPrimary"

        android:drawableLeft="@drawable/account"
        android:drawableRight="@drawable/cong"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Nguyễn Tân Tiến"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:textColor="?attr/colorPrimary"

        android:drawableLeft="@drawable/account"
        android:drawableRight="@drawable/cong"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Nguyễn Đình Quân"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:textColor="?attr/colorPrimary"

        android:drawableLeft="@drawable/account"
        android:drawableRight="@drawable/cong"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Huỳnh Minh Thuận"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:textColor="?attr/colorPrimary"

        android:drawableLeft="@drawable/account"
        android:drawableRight="@drawable/cong"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Thiều Văn Thuận"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:textColor="?attr/colorPrimary"

        android:drawableLeft="@drawable/account"
        android:drawableRight="@drawable/cong"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:background="@drawable/taomoi"
        android:text="CLICK ĐỂ XEM PHẦN  BÀI LÀM"
        android:textColor="#FFFFFF" />
</LinearLayout>
</ScrollView>